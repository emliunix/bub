-- Simple LLM function example
-- Translate English text to French using GPT-4

{-# LLM model=gpt-4 temperature=0.7 #-}
-- | Translate English to French
translate : String -> String
translate = \text -- ^ The English text to translate -> extern

{-# LLM model=gpt-4 #-}
-- | Generate a creative story summary
summarize : String -> String
summarize = \story -- ^ The story text to summarize -> extern

-- Regular function (no LLM)
identity : String -> String
identity = \x -> x
