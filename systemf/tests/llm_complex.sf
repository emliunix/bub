-- Complex LLM example with custom types using prim_op syntax

-- Define a Maybe type for results
data Maybe a = Nothing | Just a

-- Simple extraction function (no LLM)
extract : forall a. Maybe a -> a -> a
extract = \ma -> \default -> 
  case ma of
    Nothing -> default
    Just x -> x

-- LLM function with Maybe type
{-# LLM model=gpt-4 temperature=0.2 #-}
-- | Extract structured data from unstructured text
prim_op extractName : String -- ^ Text containing a person's name
  -> Maybe String

-- Chain multiple LLM operations
{-# LLM model=gpt-4 #-}
-- | Process raw input through multiple LLM steps
prim_op process : String -- ^ Raw input text
  -> String
